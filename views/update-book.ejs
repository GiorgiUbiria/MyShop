<%- include('includes/_header.ejs') %>

<main>
  <div class="text-center">
    <h1>Update Book</h1>
  </div>
  <form action="/update-book" method="PATCH">
    <div class="row mb-4">
      <div class="col">
        <div class="form-outline">
          <input
            type="text"
            id="form6Example1"
            class="form-control"
            name="book_name"
          />
          <label class="form-label" for="form6Example1">Book Name</label>
        </div>
      </div>
      <div class="col">
        <div class="form-outline">
          <input
            type="text"
            id="form6Example2"
            class="form-control"
            name="a_name"
          />
          <label class="form-label" for="form6Example2">Book Author</label>
        </div>
      </div>
    </div>

    <div class="form-outline mb-4">
      <input
        type="text"
        id="form6Example3"
        class="form-control"
        name="b_year"
      />
      <label class="form-label" for="form6Example3">Date of issue</label>
    </div>

    <div class="form-outline mb-4">
      <input type="text" id="form6Example4" class="form-control" name="b_qnt" />
      <label class="form-label" for="form6Example4">Quantity</label>
    </div>

    <div class="form-outline mb-4">
      <input
        type="text"
        id="form6Example5"
        class="form-control"
        name="b_price"
      />
      <label class="form-label" for="form6Example5">Price</label>
    </div>

    <div class="form-outline mb-4">
      <input
        type="text"
        id="form6Example6"
        class="form-control"
        name="b_quality"
      />
      <label class="form-label" for="form6Example6">Quality Grade(1-3)</label>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary btn-block mb-4">
        Update Book
      </button>
    </div>
  </form>
</main>

<%- include("includes/_footer.ejs") %>
